{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 5
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "max-len": [2, 120, 2],
    "curly": [2, "multi-or-nest", "consistent"],
    "default-case": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-multi-spaces": 2,    
    "no-useless-concat": 2,
    "no-console": [2, {
      "allow": ["warn", "error"]
    }]
  }
}